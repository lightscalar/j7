#:kivy 1.10.0


<ScanView@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1,1
    spacing: 0
    hid: ''
    createdAt: ''
    _id: ''

    Button:
        size_hint: 1, 1
        background_normal: ''
        background_color: (0.4, 0.4, 0.4, 1)
        text: root.createdAt
        font_size: sp(35)
        underline: True
        bold: True
        on_press:
            app.set_scan(root._id)
            app.root.current = 'summary_screen'

    Button:
        background_normal: ''
        background_color: (0.4, 0.4, 0.4, 1)
        color: 0.96, 0.67, 0.21, 1
        underline: True
        size_hint: 1, 1
        text: 'DELETE'
        font_size: sp(35)
        bold: True
        on_press:
            app.delete_scan(root._id)
